{
    "compilerOptions": {
      "allowJs": true,
      "target": "es6",
      "module": "commonjs",
      "sourceMap": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    }
  }